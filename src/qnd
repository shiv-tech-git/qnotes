#!/bin/bash

# quick note delete

. __qn_utils

check_data_dir
check_hint "$*"

__target=""
find_target "$*"

read -p "delete [yes/no]: " ans

if [ "${ans}" != "yes" ]; then
  exit 0
fi

unnamed=$(grep "$__target" $QN_UNNAMED)
if [ -n "$unnamed" ]; then
  grep -v ^"$__target"$ ${QN_UNNAMED} > ${QN_TMP}
  mv ${QN_TMP} ${QN_UNNAMED}
else
  rm ${QN_NAMED_DIR}/"${__target}"
  find ${QN_NAMED_DIR}/ -type d -empty -delete
fi
